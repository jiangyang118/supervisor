VITE_API_BASE=https://your-online-api.example.com
VITE_REGION=杭州市 · 西湖区
VITE_WEATHER_TEXT=多云
VITE_WEATHER_TEMP=28
VITE_WEATHER_PROVIDER=none # qweather|openweather|custom|none

# QWeather (和风天气)
# https://dev.qweather.com/docs/api/weather/weather-now/
VITE_QWEATHER_CITY_ID=101210113
VITE_QWEATHER_KEY=your-qweather-key

# OpenWeather
# https://openweathermap.org/current
VITE_OPENWEATHER_CITY=Hangzhou,cn
VITE_OPENWEATHER_KEY=your-openweather-key

# Custom provider (GET JSON endpoint). Optional template variables: {city},{key}
VITE_WEATHER_URL=

# Refresh interval in seconds (default 600)
VITE_WEATHER_REFRESH_SEC=600
VITE_WEATHER_CACHE_SEC=600

# Auto region resolve
VITE_REGION_AUTO=false
# IP Geo service (default ipapi)
VITE_IP_GEO_URL=https://ipapi.co/json/
VITE_IP_GEO_HEADER_NAME=
VITE_IP_GEO_HEADER_VALUE=
# Reverse geocode template (optional). Use {lat},{lng} substitutions, e.g.:
# VITE_REVERSE_GEOCODE_URL=https://nominatim.openstreetmap.org/reverse?format=json&lat={lat}&lon={lng}
VITE_REVERSE_GEOCODE_HEADER_NAME=
VITE_REVERSE_GEOCODE_HEADER_VALUE=
VITE_REGION_CACHE_SEC=86400
VITE_MORNING_REFRESH_SEC=300
