{
  "name": "food-safety-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9",
  "engines": { "node": ">=20" },
  "workspaces": [
    "apps/*",
    "services/*",
    "libs/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}
